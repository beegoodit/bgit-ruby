.row
  .col-12
    %h1
      = resource_class.model_name.human(count: :other)
      %span.badge.bg-primary
        = @collection.count

= turbo_frame_tag(params[:turbo_frame] || "teams") do
  .row
    .col-12
      = collection_table(collection: @collection) do |table|
        = table.id
        = table.column :name
        = render partial: "bgit/organisations/frontend/collection_table/default_actions", locals: { table: table }
