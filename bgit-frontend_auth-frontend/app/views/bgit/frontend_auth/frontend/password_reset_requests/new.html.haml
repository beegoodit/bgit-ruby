%div.panel.panel-default.mb-2
  %div.panel-heading
    %h1= t('.title', **inflections)
  
  %div.panel-body
    = simple_form_for(@resource, url: password_reset_request_path) do |f|
      - if f.object.errors.any?
        = render partial: 'form_errors', locals: { resource: f.object }
      = render 'form', form: f
      = f.button :submit, t(".submit"), class: 'btn btn-success'
  
  %div.panel-footer

.well.well-sm
  .btn-container-right
    = link_to new_user_session_path, class: 'btn btn-default btn-responsive' do
      %span.glyphicon.glyphicon-arrow-left
      %span.btn-text= t('.back')
