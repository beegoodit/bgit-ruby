.row
  .col-12
    %h1= t(".title", user: current_frontend_auth_user.human)

.row
  .col-12
    %ul.nav.nav-tabs
      %li.nav-item
        %a.nav-link.active{ href: '#tab1', 'data-toggle': 'tab' }= Bgit::FrontendAuth::User.model_name.human
      = render partial: "additional_tabs"

    .tab-content
      .tab-pane.fade.show.active{ id: 'tab1', role: 'tabpanel' }
        = turbo_frame_tag(dom_class(Bgit::FrontendAuth::User), src: bgit_frontend_auth_frontend.user_path(turbo_frame: dom_class(Bgit::FrontendAuth::User)))
      = render partial: "additional_tabs_content"
    
.row
  .col-12
    = link_to({ action: :index }, class: 'btn btn-primary btn-sm') do
      %i.fa.fa-arrow-left
      = t('.back')