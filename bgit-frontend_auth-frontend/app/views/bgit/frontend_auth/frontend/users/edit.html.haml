.panel.panel-default.mb-2
  .panel-heading
    %h1= @resource.email
  .panel-body
    = simple_form_for(@resource, url: bgit_frontend_auth_frontend.user_path) do |f|
      - if f.object.errors.any?
        = render partial: 'form_errors', locals: { resource: f.object }
      = render 'form', form: f
      = f.button :submit, class: 'btn btn-success'
  .panel-footer

.well.well-sm
  = link_to bgit_frontend_auth_frontend.user_path, class: 'btn btn-primary btn-responsive' do
    %span.glyphicon.glyphicon-eye-open
    %span.btn-text= t('.show')
  = link_to main_app.root_path, class: 'btn btn-default btn-responsive pull-right' do
    %span.glyphicon.glyphicon-arrow-left
    %span.btn-text= t('.back')